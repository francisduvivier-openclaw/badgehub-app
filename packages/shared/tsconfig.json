{
  "compilerOptions": {
    // Base Options recommended for all projects
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2023",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true, // Enable all strict type-checking options, required for Zod which we use for ts-rest
    "noUncheckedIndexedAccess": true,
    //    "erasableSyntaxOnly": true, // TODO enable this and refactor get rid of violations of this rule
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": ["es2023"],
    "paths": {
      "@badgehub/shared/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}

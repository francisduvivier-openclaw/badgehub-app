# GitHub Pages base path. For user/org pages use '/'.
VITE_BASE_PATH=/badgehub-app/

# Backend API root (no trailing slash)
VITE_BADGEHUB_API_BASE_URL=https://api.example.com

# Keycloak public config
VITE_KEYCLOAK_BASE_URL=https://keycloak.example.com
VITE_KEYCLOAK_REALM=master
VITE_KEYCLOAK_CLIENT_ID=badgehub-api-frontend

# Enable in-browser backend (for PR previews only).
# When true, the ts-rest client uses a browser-backed sqlite DB instead of the real API.
VITE_ENABLE_BROWSER_BACKEND=false

# Comma-separated values
VITE_BADGE_SLUGS=cardputer,m5stickcplus2,m5core2
